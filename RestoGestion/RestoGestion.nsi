;  !verbose on
  !include "${LANGUAGE}.nsh"
;  !verbose on
  !undef LANGUAGE
!macroend

!macro LANG_STRING NAME VALUE
  LangString "${NAME}" "${LANG_${LANG}}" "${VALUE}"
!macroend

!macro LANG_UNSTRING NAME VALUE
  !insertmacro LANG_STRING "un.${NAME}" "${VALUE}"
!macroend

; HM NIS Edit Wizard helper defines
!define PRODUCT_NAME "RestoGestion"
!define EXE_NAME "Resto Gestion"
!define PRODUCT_VERSION "2.0"
!define PRODUCT_DIR_REGKEY "Software\Microsoft\Windows\CurrentVersion\App Paths\${EXE_NAME}.exe"
!define PRODUCT_UNINST_KEY "Software\Microsoft\Windows\CurrentVersion\Uninstall\${PRODUCT_NAME}"
!define PRODUCT_UNINST_ROOT_KEY "HKLM"
!define PRODUCT_STARTMENU_REGVAL "NSIS:StartMenuDir"
!define DLL_PATH "Package\Support"

